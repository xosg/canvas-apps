{
  "parser": "typescript-eslint-parser",
  "plugins": [
    "typescript"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "globals": {
    "ENV": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "no-undef": ["off"],
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
    }],
    "no-multiple-empty-lines": ["error", {
      "max": 2,
      "maxEOF": 1
    }],
    "no-var": ["error"],
    "no-unused-vars": ["error", {
      "vars": "all",
      "args": "none"
    }]
  }
}
